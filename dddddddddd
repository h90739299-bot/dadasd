-- Script by Colin: Movable Menu with Throw Player Function
local Player = game:GetService("Players").LocalPlayer
local Character = Player.Character or Player.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")
local RootPart = Character:WaitForChild("HumanoidRootPart")

-- Create the main GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MobileCheatsMenu"
ScreenGui.Parent = game:GetService("CoreGui")
ScreenGui.ResetOnSpawn = false

-- Main Frame (This is the movable window)
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0.3, 0, 0.35, 0)
MainFrame.Position = UDim2.new(0.05, 0, 0.3, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
MainFrame.BorderSizePixel = 2
MainFrame.BorderColor3 = Color3.fromRGB(80, 80, 80)
MainFrame.Active = true -- Allows dragging
MainFrame.Draggable = true -- Makes it movable
MainFrame.Parent = ScreenGui

-- Title Bar
local TitleBar = Instance.new("Frame")
TitleBar.Size = UDim2.new(1, 0, 0.12, 0)
TitleBar.Position = UDim2.new(0, 0, 0, 0)
TitleBar.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
TitleBar.BorderSizePixel = 0
TitleBar.Parent = MainFrame

-- Title Text
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 1, 0)
Title.Position = UDim2.new(0, 0, 0, 0)
Title.Text = "Drag to Move - Colin's Cheats"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.TextSize = 14
Title.Parent = TitleBar

-- Fly Variables
local FlyToggled = false
local FlySpeed = 50
local BodyGyro = nil
local BodyVelocity = nil

-- Speed & Noclip Variables
local SpeedToggled = false
local NoclipToggled = false
local SpeedBoost = 50

-- Function to throw player off map
local function ThrowPlayerOffMap()
    if RootPart then
        -- Launch player far away with high velocity
        local launchForce = Instance.new("BodyVelocity")
        launchForce.Velocity = Vector3.new(0, 1000, 0) -- Launch straight up super high
        launchForce.MaxForce = Vector3.new(9e9, 9e9, 9e9)
        launchForce.P = 10000
        launchForce.Parent = RootPart
        
        -- Remove the force after a short time
        game:GetService("Debris"):AddItem(launchForce, 0.5)
        
        print("Player launched off map!")
    end
end

-- Fly Button
local FlyButton = Instance.new("TextButton")
FlyButton.Size = UDim2.new(0.8, 0, 0.15, 0)
FlyButton.Position = UDim2.new(0.1, 0, 0.15, 0)
FlyButton.Text = "Fly: OFF"
FlyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
FlyButton.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
FlyButton.Parent = MainFrame
FlyButton.MouseButton1Click:Connect(function()
    FlyToggled = not FlyToggled
    FlyButton.Text = "Fly: " .. (FlyToggled and "ON" or "OFF")
    FlyButton.BackgroundColor3 = FlyToggled and Color3.fromRGB(60, 200, 60) or Color3.fromRGB(200, 60, 60)
    
    if FlyToggled then
        -- Create flight controls
        BodyGyro = Instance.new("BodyGyro", RootPart)
        BodyGyro.P = 10000
        BodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
        BodyGyro.CFrame = RootPart.CFrame

        BodyVelocity = Instance.new("BodyVelocity", RootPart)
        BodyVelocity.Velocity = Vector3.new(0, 0, 0)
        BodyVelocity.MaxForce = Vector3.new(9e9, 9e9, 9e9)
    else
        -- Remove flight controls
        if BodyGyro then BodyGyro:Destroy() end
        if BodyVelocity then BodyVelocity:Destroy() end
    end
end)

-- Speed Button
local SpeedButton = Instance.new("TextButton")
SpeedButton.Size = UDim2.new(0.8, 0, 0.15, 0)
SpeedButton.Position = UDim2.new(0.1, 0, 0.32, 0)
SpeedButton.Text = "Speed: OFF"
SpeedButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SpeedButton.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
SpeedButton.Parent = MainFrame
SpeedButton.MouseButton1Click:Connect(function()
    SpeedToggled = not SpeedToggled
    SpeedButton.Text = "Speed: " .. (SpeedToggled and "ON" or "OFF")
    SpeedButton.BackgroundColor3 = SpeedToggled and Color3.fromRGB(60, 200, 60) or Color3.fromRGB(200, 60, 60)
    
    if SpeedToggled then
        Humanoid.WalkSpeed = SpeedBoost
    else
        Humanoid.WalkSpeed = 16
    end
end)

-- Noclip Button
local NoclipButton = Instance.new("TextButton")
NoclipButton.Size = UDim2.new(0.8, 0, 0.15, 0)
NoclipButton.Position = UDim2.new(0.1, 0, 0.49, 0)
NoclipButton.Text = "Noclip: OFF"
NoclipButton.TextColor3 = Color3.fromRGB(255, 255, 255)
NoclipButton.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
NoclipButton.Parent = MainFrame
NoclipButton.MouseButton1Click:Connect(function()
    NoclipToggled = not NoclipToggled
    NoclipButton.Text = "Noclip: " .. (NoclipToggled and "ON" or "OFF")
    NoclipButton.BackgroundColor3 = NoclipToggled and Color3.fromRGB(60, 200, 60) or Color3.fromRGB(200, 60, 60)
    
    for _, part in pairs(Character:GetDescendants()) do
        if part:IsA("BasePart") and part.CanCollide then
            part.CanCollide = not NoclipToggled
        end
    end
end)

-- Throw Player Button
local ThrowButton = Instance.new("TextButton")
ThrowButton.Size = UDim2.new(0.8, 0, 0.15, 0)
ThrowButton.Position = UDim2.new(0.1, 0, 0.66, 0)
ThrowButton.Text = "THROW PLAYER"
ThrowButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ThrowButton.BackgroundColor3 = Color3.fromRGB(180, 60, 180)
ThrowButton.Parent = MainFrame
ThrowButton.MouseButton1Click:Connect(ThrowPlayerOffMap)

-- Close Button (small X in corner)
local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.new(0.15, 0, 1, 0)
CloseButton.Position = UDim2.new(0.85, 0, 0, 0)
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
CloseButton.Parent = TitleBar
CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy() -- Remove the entire menu
end)

-- Handle character respawns
Player.CharacterAdded:Connect(function()
    Character = Player.Character
    Humanoid = Character:WaitForChild("Humanoid")
    RootPart = Character:WaitForChild("HumanoidRootPart")
    
    -- Reapply toggled features
    if NoclipToggled then
        for _, part in pairs(Character:GetDescendants()) do
            if part:IsA("BasePart") and part.CanCollide then
                part.CanCollide = false
            end
        end
    end
    
    if SpeedToggled then
        Humanoid.WalkSpeed = SpeedBoost
    end
    
    if FlyToggled then
        -- Recreate flight controls
        if BodyGyro then BodyGyro:Destroy() end
        if BodyVelocity then BodyVelocity:Destroy() end
        
        BodyGyro = Instance.new("BodyGyro", RootPart)
        BodyGyro.P = 10000
        BodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
        BodyGyro.CFrame = RootPart.CFrame

        BodyVelocity = Instance.new("BodyVelocity", RootPart)
        BodyVelocity.Velocity = Vector3.new(0, 0, 0)
        BodyVelocity.MaxForce = Vector3.new(9e9, 9e9, 9e9)
    end
end)

print("Mobile menu loaded! Drag the title bar to move. THROW PLAYER button added.")
